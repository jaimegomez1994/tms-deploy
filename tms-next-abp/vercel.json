{
    "version": 2,
    "builds": [
        {
            "src": "apps/abp/package.json",
            "use": "@vercel/next",
            "config": {
                "buildCommand": "pnpm run build:packages && pnpm run build:app"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "apps/abp/$1"
        }
    ]
}
